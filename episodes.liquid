---
pagination:
  data: data.items
  size: 1
  alias: item
permalink: "episodes/{{ item.itunes.episode }}/index.html"
---
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta
      name="viewport"
      content="width=device-width,initial-scale=1,shrink-to-fit=no,user-scalable=no"
    />
    <meta property="og:type" content="website" />
    <meta property="og:title" content=">{{ item.title }}——牛油果烤面包（Avocado Toast）出品" />
    <meta
      property="og:description"
      content="{{ item.contentSnippet }}"
    />
    <meta property="og:url" content="https://avocadotoast.live/episodes/{{ item.itunes.episode }}/" />
    <meta
      property="og:image"
      content="{{ item.itunes.image }}"
    />
    <meta property="fb:pages" content="319695031499949" />
    <title>{{ item.title }}——牛油果烤面包（Avocado Toast）出品</title>
    <link rel="stylesheet" href="/css/bootstrap.min.css" crossorigin="anonymous" />
    <link rel="icon" href="/favicon.ico" />
    <link rel="canonical" href="https://avocadotoast.live/episodes/{{ item.itunes.episode }}/" />
  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <a class="navbar-brand" href="https://avocadotoast.live/">牛油果烤面包</a>
    </nav>
    <div class="container mt-3">
      <div class="row">
        <div class="col-md-4 mb-4">
          <img
            data-amplitude-song-info="cover_art_url"
            data-amplitude-main-song-info="true"
            class="img-fluid"
            alt="cover art"
          />
        </div>
        <div class="col-md-8">
          <h1>{{ item.title }}</h1>
          <div class="text-muted">牛油果烤面包（Avocado Toast）</div>
        </div>
      </div>
    </div>
    <script src="/js/jquery-3.3.1.slim.min.js" crossorigin="anonymous"></script>
    <script src="/js/bootstrap.min.js" crossorigin="anonymous"></script>
    <script src="/js/amplitude.min.js" crossorigin="anonymous"></script>
    <script>
    Amplitude.init({
      songs: [
        {
          name: {{ item.title | stringify }},
          artist: '牛油果烤面包（Avocado Toast）',
          album: '牛油果烤面包（Avocado Toast）',
          url: {{ item.enclosure.url | stringify }},
          cover_art_url: {{ item.itunes.image | stringify }},
          podcast_episode_cover_art_url: {{ item.itunes.image | stringify }}
        }
      ],
      default_album_art: {{ data.image.url | stringify }}
    });
    </script>
  </body>
</html>
