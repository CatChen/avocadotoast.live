---
pagination:
  data: data.items
  size: 1
  alias: item
permalink: "episodes/{{ item.itunes.episode }}/index.html"
---
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta
      name="viewport"
      content="width=device-width,initial-scale=1,shrink-to-fit=no,user-scalable=no"
    />
    <meta property="og:type" content="website" />
    <meta property="og:title" content=">{{ item.title }}——牛油果烤面包（Avocado Toast）出品" />
    <meta property="og:description" content="{{ item.contentSnippet }}" />
    <meta property="og:url" content="https://avocadotoast.live/episodes/{{ item.itunes.episode }}/" />
    <meta property="og:image" content="{{ item.itunes.image }}" />
    <meta property="fb:pages" content="319695031499949" />
    <meta name="twitter:card" content="summary" />
    <meta name="twitter:site" content="@avocado___toast" />
    <meta name="twitter:title" content="{{ item.title }}——牛油果烤面包（Avocado Toast）出品" />
    <meta name="twitter:description" content="{{ item.contentSnippet }}" />
    <meta name="twitter:image" content="https://avocadotoast.live/episodes/{{ item.itunes.episode }}/" />
    <title>{{ item.title }}——牛油果烤面包（Avocado Toast）出品</title>
    <link rel="stylesheet" href="/css/bootstrap.min.css" crossorigin="anonymous" />
    <link rel="stylesheet" href="/css/site.css" crossorigin="anonymous" />
    <link rel="apple-touch-icon" sizes="180x180" href="/images/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/images/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/images/favicon-16x16.png">
    <link rel="icon" href="/favicon.ico" />
    <link rel="canonical" href="https://avocadotoast.live/episodes/{{ item.itunes.episode }}/" />
    <link rel="alternate" type="application/rss+xml" href="https://avocadotoast.typlog.io/episodes/feed.xml">
    {% include image_error_script %}
  </head>
  <body>
    {% include navigation_bar %}
    <div class="container mt-3">
      <div class="row">
        <div class="col-md-4 mb-4">
          <div class="img-thumbnail">
            <div class="square">
              <div class="square-item" style="background-size: contain; background-image: {% for image in item.itunes.images %}url({{ image }}){% if forloop.last != true %}, {% endif %}{% endfor %}">
              </div>
              <img
                class="img-fluid square-image-item"
                src="{{ item.itunes.image }}"
                alt="cover art"
                onerror="this.style.visibility='hidden'"
              />
            </div>
          </div>
        </div>
        <div class="col-md-8">
          <h1 style="font-size: 2em;">{{ item.title }}</h1>
          <div class="text-muted">
            {{ item.pubDate | date: '%Y 年 %m 月 %d 日发布' }}
          </div>
          <audio id="audioPlayer" class="w-100 my-3 d-block" controls preload>
            {% for enclosure in item.enclosures %}
              <source src="{{ enclosure.url}}" />
            {% endfor %}
          </audio>
          <div>{{ item.itunes.summary }}</div>
        </div>
      </div>
      {% include episode_list, episode: item.itunes.episode %}
    </div>
    {% if environment.NODE_ENV == 'development' %}
      <script>
        console.log({{ item | log }});
      </script>
    {% endif %}
    <script src="/js/jquery-3.3.1.slim.min.js" crossorigin="anonymous"></script>
    <script src="/js/bootstrap.min.js" crossorigin="anonymous"></script>
    <script src="/js/site.js" crossorigin="anonymous"></script>
    <script async src="https://www.googletagmanager.com/gtag/js?id=UA-161595329-1"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());

      gtag('config', 'UA-161595329-1');
    </script>
  </body>
</html>
